<div class="col-lg-12" data-aos="fade-up">
    <div class="event card">
	   	<div class="row">
			<div class="col-lg-6">
				<div class="event_image">
					<a href="{{fields.view_node.content}}" title="{{fields.title.content}}">
		    			{{fields.field_image.content}}
		    		</a>
		    	</div>
			</div>
			<div class="col-lg-6 event_details">
				<p class="created"><span><i class="fa fa-calendar" aria-hidden="true"></i></span>{{fields.field_date.content}}</p>
				<div class="event_title">
					<a href='{{fields.view_node.content}}'>
						<h3>{{fields.title.content}}</h3>
					</a>
		         </div>
		          <div class="event_body">
		             <p>{{fields.body.content}}</p>
		          </div>
		         <p class="campus"><span><i class="fa fa-map-marker" aria-hidden="true"></i></span>{{fields.field_campus_name.content}}</p>
			</div>
	   	</div>
    </div>
</div>