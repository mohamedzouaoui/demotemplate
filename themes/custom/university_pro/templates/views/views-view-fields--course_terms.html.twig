{% if fields.type.content|striptags == 'course' %}
  <div class="col-lg-6 course" data-aos="fade-up">
     <div class="card">
        <a href='{{fields.view_node.content}}'>
          {{fields.field_image.content}}
        </a>
        <div class="card-body">
          <a href='{{fields.view_node.content}}'>
            <h3>{{fields.title.content}}</h3>
          </a>
          <div class="course_body">
            {{fields.field_course_summary.content}}
            <div class="btn_row">
              <a class="btn primary-btn" href='{{fields.view_node.content}}'>
               {{fields.nothing.content}}
              </a>
            </div>
          </div>
        </div>
      </div>
  </div>
{% elseif fields.type.content|striptags == 'blog' %}
  <div class="col-lg-4 blog" data-aos="fade-up">
     <div class="card">
      <div class="hovereffect">
        <a href='{{fields.view_node.content}}'>
          {{fields.field_image.content}}
        </a>
      </div>
        <div class="created col-lg-3">
          <p class="date">{{ fields.created_1.content|date("d")  }}</p>
          <p class="mnth_yr">{{ fields.created_1.content|date("M y")  }}</p>
        </div> 
        <div class="card-body">
          <a href='{{fields.view_node.content}}'>
            <h3>{{fields.title.content}}</h3>
          </a>
          <div class="blog_sub_details row">
            <span class="col-md-4"><i class="fa fa-user" aria-hidden="true"></i><p>{{fields.uid.content}}</p></span>
            <span class="col-md-5"><i class="fas fa-tag"></i></i><p>{{fields.field_tags.content}}</p></span>
          </div>
          <div class="blog_body">
            {{fields.body.content}}
            <div class="btn_row">
              <a class="primary-btn" href='{{fields.view_node.content}}'>
              {{fields.nothing_1.content}}
              </a>
            </div>
          </div>
        </div>
      </div>
  </div>
{% endif %}