<div class="col-lg-12 py-3" data-aos="fade-up">
	<div class="card">
		<div class="job_title_section">
			<div class="row">
				<div class="col-lg-6 col-md-6 job_title">
					<h3>{{content.field_title.0}}</h3>
				</div>
				<div class="col-lg-6 col-md-6 job_vacancy my-auto">
					<p>{{content.field_subtitle.0}}&nbsp;&nbsp;{{content.field_vacancy_number.0}}</p>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-lg-6 job_desc my-auto">
					<p>{{content.field_content.0}}</p>
				</div>
				<div class="col-lg-3 job_dept my-auto">
					<p>{{content.field_name.0}}</p>
				</div>
				<div class="col-lg-2 ml-auto job_apply_btn my-auto">
					<button type="button" class="btn secondary-btn" data-toggle="modal" data-target="#job-{{paragraph.id()}}">{{content.field_link.0['#title']}}
					</button>
				</div>
			</div>
		</div>
	</div>
</div>



	<!-- The Modal -->
	<div class="modal" id="job-{{paragraph.id()}}">
	  <div class="modal-dialog">
	    <div class="modal-content">

	      <!-- Modal Header -->
	      <div class="modal-header">
	        <h4 class="modal-title"><span><i class="fa fa-calendar" aria-hidden="true"></i></span>Apply for {{content.field_title.0}}</h4>
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	      </div>

	      <!-- Modal body -->
	      <div class="modal-body">
	        {{content.field_webform}}
	      </div>

	      <!-- Modal footer -->
	      <div class="modal-footer">
	        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
	      </div>

	    </div>
	  </div>
	</div>
